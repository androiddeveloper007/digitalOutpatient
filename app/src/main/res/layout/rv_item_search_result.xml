<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/divider_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.2">

        <TextView
            android:id="@+id/childNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="姓名："
            android:textColor="@color/text_color_7"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="160dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/childNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:textColor="@color/text_color_7"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/childNameTitle"
            android:layout_marginStart="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/chilBirthdayTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="出生日期："
        android:textColor="@color/text_color_7"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="160dp"
        app:layout_constraintVertical_bias=".35"
        app:layout_constraintTop_toTopOf="@+id/layout1"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/chilBirthdayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text_color_7"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/chilBirthdayTitle"
        android:layout_marginStart="120dp"
        app:layout_constraintVertical_bias=".35"
        app:layout_constraintTop_toTopOf="@+id/layout1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!--水平Guideline -->
    <android.support.constraint.Guideline
        android:id="@+id/h_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent="0.55"
        app:layout_constraintLeft_toLeftOf="parent" />

    <!--水平Guideline -->
    <android.support.constraint.Guideline
        android:id="@+id/h_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent="0.7"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/chilMotherTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="母亲姓名："
        android:textColor="@color/text_color_7"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/h_guideline"
        app:layout_constraintVertical_bias=".35"
        app:layout_constraintTop_toTopOf="@+id/layout1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/chilMotherText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text_color_7"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/h_guideline1"
        app:layout_constraintVertical_bias=".35"
        app:layout_constraintTop_toTopOf="@+id/layout1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/chilYearTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="年龄："
        android:textColor="@color/text_color_7"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="160dp"
        app:layout_constraintVertical_bias=".625"
        app:layout_constraintTop_toTopOf="@+id/layout1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/chilYearText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text_color_7"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/chilYearTitle"
        android:layout_marginStart="120dp"
        app:layout_constraintVertical_bias=".625"
        app:layout_constraintTop_toTopOf="@+id/layout1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/chilFatherTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="父亲姓名："
        android:textColor="@color/text_color_7"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/h_guideline"
        app:layout_constraintVertical_bias=".625"
        app:layout_constraintTop_toTopOf="@+id/layout1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/chilFatherText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text_color_7"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/h_guideline1"
        app:layout_constraintVertical_bias=".625"
        app:layout_constraintTop_toTopOf="@+id/layout1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/chilCardNoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="免疫卡号："
        android:textColor="@color/text_color_7"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="160dp"
        app:layout_constraintVertical_bias=".85"
        app:layout_constraintTop_toTopOf="@+id/layout1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/chilCardNoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text_color_7"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/chilCardNoTitle"
        android:layout_marginStart="120dp"
        app:layout_constraintVertical_bias=".85"
        app:layout_constraintTop_toTopOf="@+id/layout1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/chilAddressTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="地址："
        android:textColor="@color/text_color_7"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/h_guideline"
        app:layout_constraintVertical_bias=".85"
        app:layout_constraintTop_toTopOf="@+id/layout1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/chilAddressText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.29"
        android:gravity="center"
        android:textColor="@color/text_color_7"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/h_guideline1"
        android:layout_marginEnd="20dp"
        app:layout_constraintVertical_bias=".85"
        app:layout_constraintTop_toTopOf="@+id/layout1"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/line_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="0.6dp"
        android:layout_height="match_parent"
        android:background="@color/line_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/line_color"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>