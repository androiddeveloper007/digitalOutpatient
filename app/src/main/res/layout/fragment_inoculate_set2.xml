<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:focusable="false"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/rootLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:focusable="false"
            android:orientation="vertical"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.35">

            <TextView
                android:id="@+id/soundSet"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/set_fragment_item_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:text="语音设置"
                android:textColor="@color/textcolor_black"
                android:textSize="20sp" />

            <View
                android:id="@+id/soundSetLine"
                android:layout_width="match_parent"
                android:layout_height="0.33dp"
                android:layout_below="@+id/soundSet"
                android:background="@color/line_color" />

            <TextView
                android:id="@+id/screenShowSet"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/soundSetLine"
                android:background="@drawable/set_fragment_item_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:text="屏幕显示设置"
                android:textColor="@color/textcolor_black"
                android:textSize="20sp" />

            <View
                android:id="@+id/screenShowSetLine"
                android:layout_width="match_parent"
                android:layout_height="0.33dp"
                android:layout_below="@+id/screenShowSet"
                android:background="@color/line_color" />

            <TextView
                android:id="@+id/workstationSet"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/screenShowSetLine"
                android:background="@drawable/set_fragment_item_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:text="工作台设置"
                android:textColor="@color/textcolor_black"
                android:textSize="20sp" />

            <View
                android:id="@+id/workstationSetLine"
                android:layout_width="match_parent"
                android:layout_height="0.33dp"
                android:layout_below="@+id/workstationSet"
                android:background="@color/line_color" />

            <TextView
                android:id="@+id/systemParamSet"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/workstationSetLine"
                android:background="@drawable/set_fragment_item_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:text="系统参数"
                android:textColor="@color/textcolor_black"
                android:textSize="20sp" />

            <View
                android:id="@+id/systemParamSetLine"
                android:layout_width="match_parent"
                android:layout_height="0.33dp"
                android:layout_below="@+id/systemParamSet"
                android:background="@color/line_color" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:layout_below="@+id/systemParamSetLine"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_main_rv_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <View
                android:layout_width="0.33dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/line_color" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/setFragmentLayout"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.65" />

    </android.support.constraint.ConstraintLayout>
</layout>